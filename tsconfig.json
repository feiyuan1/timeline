{
  "exclude": ["./server/**/*", "./backend/**/*"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist/ts",
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@emotion/react/types/css-prop",
      "webpack-env",
      "react-dom",
      "react",
      "jest",
      "@testing-library/jest-dom",
      "koa-bodyparser",
      "fetch-mock"
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "paths": {
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "assets/*": ["./src/assets/*"],
      "utils/*": ["./src/utils/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "_constants/*": ["./src/constants/*"],
      "api/*": ["./src/api/*"],
      "public/*": ["./src/public/*"]
    },
    "skipLibCheck": true
  }
}
